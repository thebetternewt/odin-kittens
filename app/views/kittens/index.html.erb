<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<h1>All Kittens</h1>
		<%= link_to "Create Kitten", new_kitten_path, class: 'btn btn-success' %>
		<br><br>
		<ul>
			<% @kittens.each do |kitten| %>
			<li>
				<%= link_to kitten.name, kitten_path(kitten) %> ==> <%= link_to 'Edit', edit_kitten_path(kitten), class: 'btn btn-primary btn-sm' %>
			</li>
			<% end %>
		</ul>	
	</div>
</div>

